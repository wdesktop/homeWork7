<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HomeWork7" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textViewStyle">@style/Theme.HomeWork7.TextView</item>
    </style>
    
    <style name="Theme.HomeWork7.TextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">35sp</item>
        <item name="android:textColor">@color/red</item>
    </style>
    <style name="Theme.HomeWork7.Button" parent="Theme.HomeWork7.TextView">
        <item name="android:backgroundTint">@color/dark_green</item>
        <item name="android:textColor">@color/green</item>
    </style>

</resources>